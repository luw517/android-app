<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:text="Start a Tournament"
        android:layout_width="200dp"
        android:layout_marginTop="45dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAllCaps="false"
        android:id="@+id/start_tournament" />

    <Button
        android:text="View Past Profits"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAllCaps="false"
        android:id="@+id/view_past_profits" />

    <Button
        android:text="View Player Totals"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAllCaps="false"
        android:id="@+id/view_player_totals" />

    <Button
        android:text="Create Players"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAllCaps="false"
        android:id="@+id/create_players" />


</LinearLayout>